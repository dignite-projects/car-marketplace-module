@page
@using Dignite.CarMarketplace.Web.Pages.Dealers
@model RegisterModel
@{
}

@if (Model.CurrentDealer != null)
{
    if (Model.CurrentDealer.AuthenticationStatus == Dignite.CarMarketplace.Dealers.AuthenticationStatus.Waiting)
    {
        <div class="alert alert-primary" role="alert">
            <h4 class="alert-heading">系统提示：</h4>
            <p>
                ✓
                您已注册成为二手车商，请等待管理员审核。
            </p>
        </div>
    }
    if (Model.CurrentDealer.AuthenticationStatus == Dignite.CarMarketplace.Dealers.AuthenticationStatus.Cancelled)
    {
        <div class="alert alert-primary" role="alert">
            <h4 class="alert-heading">系统提示：</h4>
            <p>
                ✗
                您的二手车商资质已被撤消。
            </p>
        </div>
    }
    if (Model.CurrentDealer.AuthenticationStatus == Dignite.CarMarketplace.Dealers.AuthenticationStatus.Disapproved)
    {
        <div class="alert alert-primary" role="alert">
            <h4 class="alert-heading">系统提示：</h4>
            <p>
                ✗
                您的二手车商资质不符合平台要求，未被批准。
            </p>
        </div>
    }
}
else
{
    <h1 class="text-primary display-4 fw-bold pt-md-5 mt-5 mb-5">
        找对人，卖个好价钱
    </h1>
    <div class="row mb-5 pb-5">
        <div class="col-md-4">
            <div class="rich-text">

                <p>免费上门检测，专业服务顾问指导您卖车，最快一天即可成交，成交后当天就能拿到车款。</p>
                <p>我们期待着与您合作，并为您提供最优化的解决方案。</p>
            </div>
        </div>
        <div class="col-md-7 offset-md-1">            
            <form method="post" id="register-form">
                <abp-input asp-for="DealerCreateInput.Name" auto-focus="true" />
                <abp-input asp-for="DealerCreateInput.ShortName" />
                <abp-input asp-for="DealerCreateInput.Address" />
                <abp-input asp-for="DealerCreateInput.ContactPerson" />
                <abp-input asp-for="DealerCreateInput.ContactNumber" />

                <abp-button id="RegisterFormSubmitButton" button-type="Primary" type="submit" form="register-form" text="注册车商" icon="check" />
                
            </form>
        </div>
    </div>
}